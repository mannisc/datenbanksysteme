<project name="BWApplication" basedir="." default="default">
 
	<target name="default" depends="buildwar,deploy"></target>
 
	<target name="buildwar">
		<war basedir="war" destfile="BWApplication.war" webxml="war/WEB-INF/web.xml">
			<exclude name="WEB-INF/**" />
			<webinf dir="war/WEB-INF/">
				<include name="**/*.jar" />
				<include name="classes/**" />
			</webinf>
		</war>
	</target>
 
	<target name="deploy">
		<copy file="BWApplication.war" todir="." />
	</target>
 
</project>